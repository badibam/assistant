{
  "type": {
    "_meta": {
      "type": "string",
      "description": "Tool identifier"
    },
    "value": "tracking"
  },
  "version": {
    "_meta": {
      "type": "string",
      "description": "Tool version"
    },
    "value": "1.0.0"
  },
  "display_name": {
    "_meta": {
      "type": "string",
      "description": "Human-readable tool name"
    },
    "value": "Tracking Tool"
  },
  "description": {
    "_meta": {
      "type": "string",
      "description": "Tool description for AI and users"
    },
    "value": "Track quantitative and qualitative data over time with flexible grouping and item management"
  },
  "config_schema": {
    "_meta": {
      "type": "object",
      "description": "Configuration schema for tool instances"
    },
    "name": {
      "_meta": {
        "type": "string",
        "required": true,
        "description": "Display name for this tracking instance"
      }
    },
    "type": {
      "_meta": {
        "type": "enum",
        "values": ["numeric", "text", "scale", "boolean"],
        "required": true,
        "description": "Data type for all items in this tracking instance"
      }
    },
    "show_value": {
      "_meta": {
        "type": "boolean",
        "default": true,
        "description": "Whether to show value input field in UI"
      }
    },
    "item_mode": {
      "_meta": {
        "type": "enum",
        "values": ["free", "predefined", "both"],
        "default": "free",
        "description": "Item input mode: free text, predefined list, or both"
      }
    },
    "save_new_items": {
      "_meta": {
        "type": "boolean",
        "default": false,
        "description": "Whether to save new free-text items to predefined list"
      }
    },
    "default_unit": {
      "_meta": {
        "type": "string",
        "description": "Default unit for numeric values"
      }
    },
    "min_value": {
      "_meta": {
        "type": "number",
        "description": "Minimum allowed value for numeric type"
      }
    },
    "max_value": {
      "_meta": {
        "type": "number",
        "description": "Maximum allowed value for numeric type"
      }
    },
    "groups": {
      "_meta": {
        "type": "array",
        "required": true,
        "min_items": 1,
        "description": "Groups containing predefined items"
      },
      "items": {
        "_meta": {
          "type": "object",
          "description": "Group configuration"
        },
        "name": {
          "_meta": {
            "type": "string",
            "required": true,
            "description": "Group display name"
          }
        },
        "items": {
          "_meta": {
            "type": "array",
            "description": "Predefined items in this group"
          },
          "items": {
            "_meta": {
              "type": "object",
              "description": "Item configuration"
            },
            "name": {
              "_meta": {
                "type": "string",
                "required": true,
                "description": "Item display name"
              }
            },
            "unit": {
              "_meta": {
                "type": "string",
                "description": "Unit for this specific item"
              }
            },
            "default_amount": {
              "_meta": {
                "type": "number",
                "description": "Default amount/value for this item"
              }
            }
          }
        }
      }
    }
  },
  "supported_operations": {
    "_meta": {
      "type": "array",
      "description": "List of operations this tool supports"
    },
    "value": ["add_entry", "get_entries", "update_entry", "delete_entry"]
  }
}